      //var docs = DocsList.getAllFiles();
  
      // Get the email address of the active user - that's you
      var emailAddress = Session.getActiveUser().getEmail();
      var nomeDocumentos="";
  
      //pega o nome de todos documentos
      /*for(var documento in docs){
        nomeDocumentos += documento.getName() + "\n";
      }*/
      for(var i = 0; i < docs.length; i++){
        //nomeDocumentos += docs[i].getName() + "\n";
        nomeDocumentos += docs[i].getName() + "<br />";
      }
      
      return nomeDocumentos;
      
      /*
