<?xml version="1.0" encoding="utf-8"?>
<Module>
  <ModulePrefs title="Teste Scripts" />
  <Content type="html">
    <![CDATA[
    <!doctype html>
	<html ng-app>
	<head>
	    <style type="text/css"">
	    	.main{
	    		width:100%;
	    		height:100%;
	    		padding: 0px;
	    		font-size:12px;
			font-family:tahoma arial;
	    	}
	    	.main input{
	    		font-size:8px;	
	    		font-family:tahoma arial;
	    	}	    	
	    </style>
	    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js"></script>
	</head>
	<body>
	    <div id="container" class="main"">
	        <label>
	            Name:</label>
	        <input type="text" ng-model="yourName" placeholder="Enter a name here" size="13">
	        <hr>
	        <h1>
	            Hello {{yourName}}!</h1>
	    </div>    
	</body>
	</html>
    ]]>
  </Content>
</Module>
